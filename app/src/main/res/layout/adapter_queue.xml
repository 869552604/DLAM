<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.first.dlam.base.views.TimeBarView
        android:id="@+id/queueBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/queueBar"
        app:layout_constraintBottom_toBottomOf="@id/queueBar"
        app:layout_constraintLeft_toRightOf="@id/queueBar"
        android:layout_marginLeft="2dp"
        android:background="#999"/>

    <TextView
        android:id="@+id/codeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/queueBar"
        app:layout_constraintLeft_toRightOf="@id/queueBar"
        android:textColor="#000"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/codeContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/codeName"
        app:layout_constraintLeft_toLeftOf="@id/codeName"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/codeContent"
        app:layout_constraintLeft_toLeftOf="@id/codeName"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/onclick"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Kå›¾"
        android:textColor="#000"
        app:layout_constraintLeft_toRightOf="@id/queueBar"
        app:layout_constraintBottom_toBottomOf="@id/queueBar"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_normal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ceng"
        app:layout_constraintTop_toBottomOf="@id/queueBar"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
